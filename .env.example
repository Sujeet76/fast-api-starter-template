# Application Settings
APP_NAME="FastAPI Template"
APP_VERSION="0.1.0"
DEBUG=True
API_V1_PREFIX="/api/v1"

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production-make-it-at-least-32-characters-long"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"  # json, text, or structured (for file logging)
CONSOLE_LOG_FORMAT="pretty"  # pretty, json, text, or structured (for console)
LOG_FILE="logs/app.log"  # Optional: set to enable file logging
LOG_MAX_SIZE=10  # MB
LOG_RETENTION=7  # days
LOG_ROTATION="daily"  # daily, weekly, or size
ENABLE_REQUEST_LOGGING=True
ENABLE_SQL_LOGGING=False
LOG_SQL_QUERIES=False
LOG_SLOW_QUERIES_THRESHOLD=1.0  # seconds

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=fastapi_template

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]
